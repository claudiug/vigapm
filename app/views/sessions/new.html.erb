<h1>Log In</h1>

<%= form_tag :sessions do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class = 'field'>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
     </div>
    <div class="action">
      <%= submit_tag 'Log IN' %>
    </div>
<% end %>
<p><%= link_to "Bad memory bro?", new_password_reset_path %></p>
