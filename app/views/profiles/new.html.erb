<p>Add a new profile</p>
<%= form_for [@user, @profile] do |f| %>
    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :country %>
      <%= f.text_field :country %>
    </div>
    <div class="field">
      <%= f.label :bio %>
      <%= f.text_area :bio %>
    </div>
    <div class="action">
      <%= f.submit 'Add a new profile' %>
    </div>
<% end %>
