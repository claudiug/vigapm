<!DOCTYPE html>
<html>
<head>
  <title>Vigap</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>

<body>
<div class="container">
<nav role="navigation" class="navbar navbar-default">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <ul class="nav navbar-nav"><li>
          <%= link_to 'VIGAP', "#{request.protocol}#{request.host_with_port}" %>
        </li></ul>
    </div>
    <!-- Collection of nav links, forms, and other content for toggling -->
    <div id="navbarCollapse" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
            <% if current_user %>
                <li><%= link_to 'Start a new thread', new_post_path %></li>
            <% end %>
        </ul>

        <%= form_tag root_path, method: :get, class: "navbar-form navbar-left" do %>
            <div class="form-group">
            <%= text_field_tag :query, params[:query], placeholder: "Search", class: 'typeahead form-control' %>
            <%= submit_tag 'Search bro', class: "hidden" %>
            </div>
        <% end %>

        <ul class="nav navbar-nav navbar-right">

            <% if current_user %>
            <li style="padding-top:15px;color:#33CC33;">
                Logged as:&nbsp;<%=link_to current_user.username, user_profiles_path(current_user), style: 'display:inline;padding:0 0;' %>
            </li>
            <% else %>
            <li>
                <%= link_to 'Login', new_session_path %>
            </li>
            <% end %>

            <% if current_user %>
            <li>
                <%= link_to 'Logout' , logout_path  %>
            </li>
            <% else %>
            <li>
                <%= link_to 'Sign UP', new_user_path %>
            </li>
            <% end %>

          </li>
        </ul>
    </div>
</nav>

<%= yield %>
</div>

</body>
</html>
