<!DOCTYPE html>
<html>
<head>
  <title>Vigap</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
</head>

<body>
<nav role="navigation" class="navbar navbar-default navbar-static-top">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="container">

    <div class="navbar-header">
        <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
          <%= link_to image_tag("logo.png", :style => "height:28px;margin-top:-3px;"), "#{request.protocol}#{request.host_with_port}", :class => "navbar-brand" %>
    </div>

    <div id="navbarCollapse" class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-left">
            <% if current_user %>
                <li><%= link_to 'New Post', new_post_path %></li>
            <% end %>
        </ul>

        <%= form_tag root_path, method: :get, class: "navbar-form navbar-left" do %>
            <div class="form-group">
                <div class="input-group">
                    <%= text_field_tag :query, params[:query], placeholder: "Search", class: 'typeahead form-control searchbox' %>
                    <%= submit_tag 'Search bro', class: "hidden" %>
                </div>
            </div>
        <% end %>

        <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
            <li>
                <%= link_to 'Logout' , logout_path  %>
            </li>
            <% else %>
            <li>
                <%= link_to 'Sign UP', new_user_path %>
            </li>
            <% end %>

          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">

            <% if current_user %>
            <li>
                <a href="<%=user_path(current_user)%>" style="margin-right:15px;margin-top:-3px;">
                    <%= image_tag current_user.avatar.url, :height => "35px", :style => "margin-top:-5px;margin-right: 4px;" %>
                    <%= current_user.username %>
                </a>
            </li>
            <% else %>
            <li>
                <%= link_to 'Login', new_session_path %>
            </li>
            <% end %>
        </ul>

    </div>
    </div>
</nav>
<div data-pjax-container class="container pagecontent">
  <%= yield %>
</div>

</body>
</html>
