<header>
<%= link_to image_tag("vigap-logo.png", width: 141), "#{request.protocol}#{request.host_with_port}", :class => "brand" %>

  <div class="user-area">

      <!-- user face -->
        <% if current_user %>
              <a href="<%=user_path(current_user)%>" class="no-style">
                <span class="user-avatar"><%= image_tag current_user.avatar.url, width: 30 %></span>
                <strong><%= current_user.username %></strong>
                <span class="inliner icon icon-angle-right"></span>
              </a>
        <% else %>
              <%= link_to t('user.user_login'), new_session_path, title: t('user.user_login') %>
        <% end %>


      <!-- post -->
      <% if current_user %>
            <%= link_to t('user.add_post'), new_post_path, class: 'action', title: t('user.add_post') %>
      <% end %>

    <!-- logout / sign up -->
    <% if current_user %>
        <%= link_to t('user.user_logout'), logout_path, title: t('user.user_logout')  %>
    <% else %>
        <%= link_to t('user.user_signup_html'), new_user_path, class: 'action', title: t('user.user_signup') %>
    <% end %>

  </div>




    <div class="header-14-sub">
      <div class="subscribe-form col-sm-8 col-sm-offset-2">
        <%= form_tag root_path, method: :get, class: "navbar-form navbar-center" do %>

              <div class="input-group">
                <%= text_field_tag :query, params[:query], placeholder: t('search.field_placeholder'), class: 'typeahead form-control searchbox' %>
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button">
                      <%= t "search.button" %>
                    </button>
                </span>



              </div>
            <span class="vigap-count">Browse through <strong>9.123</strong> discussions</span>
        <% end %>
      </div> <!-- .ubscribe-form col-sm-8 col-sm-offset-2 -->
    </div> <!-- .header-14-sub -->

</header>