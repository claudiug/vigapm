<div class="page-white-full">
<div class="container">
      <ul class="nav nav-tabs" id="myTab">
        <li class="active"><a href="#posts" data-toggle="tab">Posts</a></li>
        <li><a href="#subs" data-toggle="tab">Subscription posts</a></li>
        <!--
        <li><a href="#followers" data-toggle="tab">Followers</a></li>
        <li><a href="#following" data-toggle="tab">Following</a></li>
        <%= link_to 'Followers', followers_user_path(@user) %>
        <%= link_to 'Following', following_user_path(@user) %>
-->
        <% if current_user.username == @user.username %>
            <li><a href="#settings" data-toggle="tab" id="_profile_settings">Settings</a></li>
        <% end %>
      </ul>

      <div class="tab-content">

        <div class="tab-pane active" id="posts">

          <ul class="list-group">
            <% @user.posts.each do |post| %>
                <li class="list-group-item text-right">
                  <%= link_to post.title, post_path(post), :class => "pull-left" %>
                  <%= time_ago_in_words(post.created_at) %>
                </li>
            <% end %>
          </ul>
        </div><!--/tab-pane-->

        <div class="tab-pane active" id="subs">
          <% @user.subscription_posts.each do |subscription_post| %>
              <%= link_to subscription_post.title, post_path(subscription_post) %>

          <% end %>
        </div><!--/tab-pane-->

        <% if current_user.username == @user.username %>
            <div class="tab-pane" id="settings">

              <%= form_for @user,  :html => { :multipart => true } do |f| %>

                  <div class="form-group">
                    <div class="col-xs-6">
                      <label for="username"><%= f.label :username%></label>
                      <%= f.text_field :username, :class => "form-control" %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-xs-6">
                      <label for="city"><%= f.label :email %></label>
                      <%= f.text_field :email, :class => "form-control" %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-xs-6">
                      <label for="city"><%= f.label :city %></label>
                      <%= f.text_field :city, :class => "form-control" %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-xs-6">
                      <label for="city"><%= f.label :bio %></label>
                      <%= f.text_field :bio, :class => "form-control" %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-xs-6">
                      <label for="password"><%= f.label :password %></label>
                      <%= f.password_field :password, :class => "form-control" %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-xs-6">
                      <label for="password"><%= f.label :avatar %></label>
                      <%= f.file_field :avatar, :class => "form-control" %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-xs-12">
                      <br>
                      <%= f.submit 'save', :class => "btn btn-info", :id => "_profile_settings_save" %>
                    </div>
                  </div>
              <% end %>
            </div>
        <% end %>

      </div><!--/tab-pane-->
    </div><!--/tab-content-->

  </div>

</div>




